<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lyHeader"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/hcitas"
                android:contentDescription="@string/title_chat"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/btnredondo"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="@string/select_hour" />


        </LinearLayout>
    </RelativeLayout>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
       android:headerBackground="@color/colorPrimaryDark"
        android:numbersBackgroundColor="@color/colorPrimaryDark"
        android:background="@color/colorPrimary" />

</LinearLayout>

