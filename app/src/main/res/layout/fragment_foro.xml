<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.sanus.sanus.Fragments.ForoFragment">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lyHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/hforo" />
        </LinearLayout>


            <LinearLayout
                android:id="@+id/lySearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:background="@drawable/btnredondo"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:weightSum="3">

                <SearchView
                    android:id="@+id/buscador"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:queryHint="¿Qué síntomas tiene?">

                </SearchView>
            </LinearLayout>



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_add_circle_outline_white_48dp"
            app:backgroundTint="@color/btnCrea" />

    </RelativeLayout>

</LinearLayout>
