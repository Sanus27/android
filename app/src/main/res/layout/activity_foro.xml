<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityForo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@drawable/hforo" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="32dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/ivPhoto1"
                        android:layout_width="@dimen/publish_photo_thumbnail_size"
                        android:layout_height="@dimen/publish_photo_thumbnail_size"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/user"
                        />

                    <TextView
                        android:id="@+id/etDescription1"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:hint="Comentarios"
                        android:inputType="textAutoComplete"
                        android:lines="3"
                        android:padding="8dp"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="32dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/ivPhoto2"
                        android:layout_width="@dimen/publish_photo_thumbnail_size"
                        android:layout_height="@dimen/publish_photo_thumbnail_size"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/user"
                        />

                    <TextView
                        android:id="@+id/etDescription2"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:hint="Cometarios"
                        android:inputType="textAutoComplete"
                        android:lines="3"
                        android:padding="8dp"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="32dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">

                    <ImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="@dimen/publish_photo_thumbnail_size"
                        android:layout_height="@dimen/publish_photo_thumbnail_size"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/user"
                        />

                    <TextView
                        android:id="@+id/etDescription"
                        android:layout_width="0dp"
                        android:layout_height="96dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:gravity="top"
                        android:hint="Cometarios"
                        android:inputType="textAutoComplete"
                        android:lines="3"
                        android:padding="8dp"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!--Menu-->
    <RelativeLayout
        android:id="@+id/barraInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img1"
                android:onClick="menuBusqueda"
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@mipmap/ic_search_black_24dp" />

            <ImageView
                android:id="@+id/img2"
                android:onClick="menuCita"
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/img1"
                android:src="@mipmap/ic_event_black_48dp" />

            <ImageView
                android:id="@+id/img3"
                android:onClick="menuForo"
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/img2"
                android:src="@mipmap/ic_forum_black_48dp" />

            <ImageView
                android:id="@+id/img4"
                android:onClick="menuAyuda"
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/img3"
                android:src="@mipmap/ic_help_black_48dp" />

            <ImageView
                android:id="@+id/img5"
                android:onClick="menuConfig"
                android:layout_weight=".2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/img4"
                android:src="@mipmap/ic_settings_black_48dp" />

        </LinearLayout>
    </RelativeLayout>
    <!--fin menu-->


</RelativeLayout>
