<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/editCurriculum"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.sanus.sanus.domain.doctor_module.edit_curriculum.view.EditCurriculumActivity">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lyHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/hcompleteregister" />
        </LinearLayout>

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:id="@+id/lyComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/backgroundround"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitleObligatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_min"
                android:paddingTop="@dimen/margin_min"
                android:paddingBottom="@dimen/margin_small"
                android:textSize="@dimen/margin_avg"
                android:textColor="@color/black"
                android:text="@string/edit_curriculum"
                tools:ignore="SpUsage" />


            <EditText
                android:id="@+id/editCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:background="@drawable/btnround"
                android:hint="@string/editar_curriculum"
                android:padding="@dimen/padding_small" />

            <Button
                android:id="@+id/btnGuardar"
                style="?android:textAppearanceSmall"
                android:layout_width="150dp"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_small"
                android:background="@drawable/btnazul"
                android:enabled="false"
                android:text="@string/button_save"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
